<?xml version="1.0"?>
<ruleset
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd"
  name="saveyour"
>
  <description>Saveyour coding standard</description>

  <!-- Paths -->
  <file>./src</file>
  <file>./tests</file>
  <exclude-pattern>./tests/runtime/assets</exclude-pattern>

  <!-- Args -->
  <arg value="p"/>
  <arg value="s"/>
  <arg name="colors"/>

  <!-- Config -->
  <config name="ignore_warnings_on_exit"
    value="1"/>

  <config name="ignore_errors_on_exit"
    value="1"/>

  <config name="default_standard"
    value="PSR12"/>

  <!-- Use the PSR12 Standard-->
  <rule ref="PSR12"/>

  <!-- Disable Squiz Standard -->
  <rule ref="Squiz">
    <exclude name="Squiz"/>
  </rule>

  <!-- Disable camel case method name rule for tests -->
  <rule ref="PSR1.Methods.CamelCapsMethodName">
    <exclude-pattern>./tests/Suites</exclude-pattern>
  </rule>
</ruleset>
